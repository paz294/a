<script>
    const challenges = document.querySelectorAll('.challenge');
    const totalCount = challenges.length;
    document.getElementById('total-count').textContent = totalCount;

    function markCompleted(button) {
        const challengeDiv = button.parentElement;
        if(challengeDiv.dataset.completed === "false") {
            challengeDiv.classList.add('completed');
            challengeDiv.dataset.completed = "true";
            updateCompletedCount();
        }
    }

    function updateCompletedCount() {
        const completed = document.querySelectorAll('.challenge[data-completed="true"]').length;
        document.getElementById('completed-count').textContent = completed;
    }
</script>

